<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlHighlight">@color/accent</item>
        <!-- <item name="colorControlActivated">@color/activated</item>
        <item name="android:navigationBarColor">@color/primaryDark</item>
        <item name="android:statusBarColor">@color/primaryDark</item>-->
        <item name="android:textColorPrimary">@color/accent</item>
        <item name="android:textColorSecondary">@color/primaryDark</item>
        <item name="android:textColorPrimaryInverse">@color/highlight</item>
        <item name="actionMenuTextColor">@color/accent</item>
    </style>

    <style name="Light" parent="Theme.AppCompat.Light" />

    <style name="Dark" parent="Theme.AppCompat" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- <item name="android:textColorSecondary">@color/colorAccent</item>-->
        <item name="android:textColorPrimary">@color/accent</item>
    </style>

    <!-- <style name="ThemeOverlay.AccentSecondary" parent="ThemeOverlay.AppCompat">
         <item name="colorAccent">@color/colorActivated</item>
         <item name="android:textColorPrimary">@color/accent</item>
     </style>-->

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/accent</item>
        <!-- <item name="android:textColorSecondary">@color/colorAccent</item>-->
    </style>


</resources>
